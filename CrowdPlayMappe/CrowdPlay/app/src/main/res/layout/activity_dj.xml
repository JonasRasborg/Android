<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DJActivity"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/imgAlbum"
        android:layout_width="83dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorSecondary"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/imgAlbum"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist name"
        android:textColor="@color/colorSecondary"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTrack"
        app:layout_constraintLeft_toRightOf="@+id/imgAlbum"
        android:layout_marginLeft="32dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@+id/imgAlbum"
        app:layout_constraintTop_toBottomOf="@+id/txtArtist"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/togglePlay"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAlbum"
        app:layout_constraintVertical_bias="0.0" />

    <ToggleButton
        style="@style/Widget.AppCompat.Button.Colored"
        android:theme="@style/ButtonTheme"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/togglePlay"
        android:layout_width="144dp"
        android:layout_height="52dp"
        android:text="ToggleButton"
        android:textOff="Play"
        android:textOn="Pause"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteY="507dp" />

</android.support.constraint.ConstraintLayout>
